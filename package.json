{
  "author": {
    "name": "Tyler Hardison",
    "email": "tyler@seraphnet.com"
  },
  "name": "tr-statbot",
  "description": "A simple bot for tracking statistics in TreesRadio",
  "type": "module",
  "ts-node": {
    "files": true
  },
  "devDependencies": {
    "@anitrack/patreon-wrapper": "^1.4.6",
    "@firebase/app-types": "^0.8.1",
    "@types/node": "^18.11.11",
    "esbuild": "^0.15.18",
    "esbuild-node-tsc": "^2.0.4",
    "typescript": "^4.9.3",
    "vite": "^4.0.4",
    "vite-node": "^0.28.2"
  },
  "dependencies": {
    "firebase-admin": "^11.3.0",
    "knex": "^2.4.0",
    "mongoose": "^6.8.0",
    "observable-slim": "^0.1.6",
    "pg": "^8.8.0"
  },
  "esbuild": {
    "external": [
      "sqlite3",
      "better-sqlite3",
      "tedious",
      "mysql2",
      "oracledb",
      "pg-native"
    ]
  },
  "scripts": {
    "dev": "vite-node src/index.ts",
    "start": "node ./dist/index.js",
    "build": "rm -rf dist && esbuild --bundle --platform=node --target=node16 --outdir=dist --external:better-sqlite3 --external:sqlite3 --external:oracledb --external:mysql --external:pg-query-stream --external:mysql --external:mysql2 --external:pg-native --external:tedious  src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
