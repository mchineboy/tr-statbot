{
  "author": {
    "name": "Tyler Hardison",
    "email": "tyler@seraphnet.com"
  },
  "name": "tr-statbot",
  "description": "A simple bot for tracking statistics in TreesRadio",
  "type": "module",
  "ts-node": {
    "files": true
  },
  "devDependencies": {
    "@anitrack/patreon-wrapper": "^1.5.2",
    "@firebase/app-types": "^0.9.0",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.18.13",
    "esbuild-node-tsc": "^2.0.5",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-prisma": "^4.17.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "vite-node": "^0.33.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "firebase-admin": "^11.10.1",
    "knex": "^2.5.1",
    "pg": "^8.11.1",
    "prisma": "^5.0.0",
    "rxjs": "^7.8.1",
    "zod": "^3.21.4"
  },
  "prettier": {
    "printWidth": 100,
    "arrowParens": "always",
    "plugins": [
      "prettier-plugin-prisma"
    ]
  },
  "esbuild": {
    "external": [
      "sqlite3",
      "better-sqlite3",
      "tedious",
      "mysql2",
      "oracledb",
      "pg-native"
    ]
  },
  "scripts": {
    "dev": "vite-node src/index.ts --watch",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up",
    "start": "node ./dist/index.js",
    "build": "node esbuild.config.js",
    "build:docker": "pnpm build && docker-compose -f docker-compose.dev.yml build",
    "stop:docker": "docker-compose -f docker-compose.dev.yml down",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
