{
  "author": {
    "name": "Tyler Hardison",
    "email": "tyler@seraphnet.com"
  },
  "name": "tr-statbot",
  "description": "A simple bot for tracking statistics in TreesRadio",
  "type": "module",
  "ts-node": {
    "files": true
  },
  "devDependencies": {
    "@anitrack/patreon-wrapper": "^1.4.6",
    "@firebase/app-types": "^0.8.1",
    "@types/node": "^18.11.11",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "esbuild": "^0.15.18",
    "esbuild-node-tsc": "^2.0.4",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.3",
    "prettier-plugin-prisma": "^4.9.0",
    "typescript": "^4.9.3",
    "vite": "^4.0.4",
    "vite-node": "^0.28.2"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "firebase-admin": "^11.3.0",
    "knex": "^2.4.0",
    "pg": "^8.8.0",
    "prisma": "^4.9.0",
    "rxjs": "^7.8.0",
    "zod": "^3.20.2"
  },
  "prettier": {
    "printWidth": 100,
    "arrowParens": "always",
    "plugins": [
      "prettier-plugin-prisma"
    ]
  },
  "esbuild": {
    "external": [
      "sqlite3",
      "better-sqlite3",
      "tedious",
      "mysql2",
      "oracledb",
      "pg-native"
    ]
  },
  "scripts": {
    "dev": "vite-node src/index.ts --watch",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up",
    "start": "node ./dist/index.js",
    "build": "esbuild --bundle --platform=node --target=node16 --outdir=dist --external:better-sqlite3 --external:sqlite3 --external:oracledb --external:mysql --external:pg-query-stream --external:mysql --external:mysql2 --external:pg-native --external:tedious  src/index.ts",
    "build:docker": "pnpm build && docker-compose -f docker-compose.dev.yml build",
    "stop:docker": "docker-compose -f docker-compose.dev.yml down",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
